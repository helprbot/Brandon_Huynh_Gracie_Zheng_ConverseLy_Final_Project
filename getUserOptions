func getUserOption(scenario: String, language: Int, counter: Int) -> String{
    
    if scenario.contains("dinner") && language==1{
        if counter >= spanishDinner.count{
            return "Adios."
        }
        return spanishDinner[counter]
    }
    else if scenario.contains("direction") && language==1{
        if counter >= spanishDirections.count{
            return "Adios."
        }
        return spanishDirections[counter]
    }
    else if scenario.contains("coffee") && language==1{
        if counter >= spanishCoffee.count{
            return "Adios."
        }
        return spanishCoffee[counter]
    }
    else if scenario.contains("appointment") && language==1{
        if counter >= spanishDoctor.count{
            return "Adios."
        }
        return spanishDoctor[counter]
    }
    else if scenario.contains("friend") && language==1{
        if counter >= spanishFriends.count{
            return "Adios."
        }
        return spanishFriends[counter]
    }
    else if scenario.contains("picture") && language==1{
        if counter >= spanishPicture.count{
            return "Adios."
        }
        return spanishPicture[counter]
    }
    else if scenario.contains("dinner") && language==2{
        if counter >= chineseDinner.count{
            return "Zàijiàn."
        }
        return chineseDinner[counter]
    }
    else if scenario.contains("directions") && language==2{
        if counter >= chineseDirections.count{
            return "Zàijiàn."
        }
        return chineseDirections[counter]
    }
    else if scenario.contains("coffee") && language==2{
        if counter >= chineseCoffee.count{
            return "Zàijiàn."
        }
        return chineseCoffee[counter]
    }
    else if scenario.contains("appointment") && language==2{
        if counter >= chineseDoctor.count{
            return "Zàijiàn."
        }
        return chineseDoctor[counter]
    }
    else if scenario.contains("friends") && language==2{
        if counter >= chineseFriends.count{
            return "Zàijiàn."
        }
        return chineseFriends[counter]
    }
    else if scenario.contains("picture") && language==2{
        if counter >= chinesePicture.count{
            return "Zàijiàn."
        }
        return chinesePicture[counter]
    }
    return "Something went wrong"
}
